<form method="POST" action="/transactions">

  <label for="merchant_field">Merchant:</label>
  <input id="merchant_field" name="merchant" type="text">

  <label for="value_field">Amount:</label>
  <input id="value_field" name="value" type="number">

  <label for="purchased_field">Purchased:</label>
  <input id="purchased_field" name="purchased_on" type="date">

  <label for="category-select">Select expense category:</label>
  <select id="category-select" name="tag_id">
    <% for tag in @tags %>
      <option value= <%= tag.id %> > <%= tag.tag_name %></option>
    <% end %>
  </select>

  <!-- we need to hard-code the person_id! -->
  <input id="person_field" name="person_id" type="hidden" value="<%= @person.id %>">

  <input type="submit" value="Log transaction">

</form>