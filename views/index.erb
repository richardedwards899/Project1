<!-- Show total expenditure by tag -->
<table>
  <thead>
    <tr>
      <th>Catgory</th><th>Total spent</th>
    </tr>
  </thead>
  <tbody>
    <% for tag in @tags %>
      <tr>
        <td><%= tag.tag_name %></td>
        <td>£<%= sprintf('%.2f', tag.total_spent) %></td>
      </tr>
    <% end %>
  <tbody>
</table>


<!-- show total expenditure by month -->
<table>
  <tr>
    <th>Month</th><th>Total expenditure</th>
  </tr>
  <% for index in 0...@months.count %>
    <tr>
      <td><%= @months[index] %></td>
      <td>£<%= sprintf('%.2f', @monthly_totals[index]) %></td>
    </tr>
  <% end %>
</table>